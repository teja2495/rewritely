<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Rewritely" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- true black window background -->
        <item name="android:windowBackground">@color/black_amoled</item>
        <!-- status bar -->
        <item name="android:statusBarColor">@color/black_amoled</item>
        <!-- navigation bar if you care -->
        <item name="android:navigationBarColor">@color/black_amoled</item>

        <!-- primary / accent for buttons, FABs, etc. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/black_amoled</item>

        <!-- secondary is also often used for raised buttons -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black_amoled</item>

        <!-- text colors on background/surface -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>